<div class="page-header">
    <h1><%= @user.full_name %></h1>
</div>

<% if @statuses  %>
    <% @statuses.each do |status|  %>
    <div class="card">
        <div class="card-body">
            <%= status.content %>
            <hr>
        Hace <%= link_to time_ago_in_words(status.created_at), status_path(status) %>
        </div>
    </div>
    <br>
    <% end  %>
<% end %>